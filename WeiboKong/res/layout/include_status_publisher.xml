<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llProfileHeader"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_actionbar_blue"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8sp" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/niv_status_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="2sp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_status_nick_name"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true" 
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/tv_location"
            style="@style/header_profile_impress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textColor="@color/white">
        </TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_status_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4sp"
        android:background="@drawable/icon_more_detail" />

</LinearLayout>